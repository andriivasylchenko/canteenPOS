<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/applause_editor_bg">

    <com.applause.android.ui.overlay.OverlayView
        android:id="@+id/applause_overlay"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <RelativeLayout
        android:id="@+id/applause_overlay_header"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/applause_dialog_header_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical|left"
            android:paddingLeft="16dip"
            android:textStyle="bold"
            android:text="@string/applause_edit_screenshot"
            android:textColor="@color/applause_editor_header_text"
            android:textSize="20sp" />

        <Button
            android:id="@+id/applause_overlay_go_report"
            android:layout_width="wrap_content"
            android:layout_height="64dip"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/applause_editor_button"
            android:text="@string/applause_accept_icon"
            android:textColor="@color/applause_editor_header_text"
            android:textSize="20dp"
            tools:ignore="SpUsage" />

        <com.applause.android.ui.AwesomeFontButton
            android:id="@+id/applause_overlay_delete_screenshot"
            android:layout_toLeftOf="@+id/applause_overlay_go_report"
            android:layout_width="64dip"
            android:layout_height="64dip"
            android:background="@drawable/applause_editor_button"
            android:text="@string/applause_trash_icon"
            android:textColor="@color/applause_editor_header_text"
            android:textSize="26dp"
            tools:ignore="SpUsage" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/applause_overlay_toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/applause_dialog_header_background">

        <com.applause.android.ui.AwesomeFontButton
            android:id="@+id/applause_overlay_pencil"
            style="@style/applause_editor_button"
            android:layout_width="match_parent"
            android:layout_height="64dip"
            android:layout_weight="1"
            android:text="@string/applause_pencil_icon"/>

        <com.applause.android.ui.AwesomeFontButton
            android:id="@+id/applause_overlay_spray"
            style="@style/applause_editor_button"
            android:layout_width="match_parent"
            android:layout_height="64dip"
            android:layout_weight="1"
            android:text="@string/applause_spray_icon"/>

        <com.applause.android.ui.AwesomeFontButton
            android:id="@+id/applause_overlay_eraser"
            style="@style/applause_editor_button"
            android:layout_width="match_parent"
            android:layout_height="64dip"
            android:layout_weight="1"
            android:text="@string/applause_eraser_icon"/>
    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/alek/Workspace/Applause/Mobile-SDK-Android/applause-lib/src/ibm/res/layout/applause_editor.xml -->