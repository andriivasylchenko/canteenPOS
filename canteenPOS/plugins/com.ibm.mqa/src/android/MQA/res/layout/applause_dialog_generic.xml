<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:background="@drawable/applause_dialog_background"
    android:orientation="vertical"
    android:padding="0dp">

    <TextView
        android:id="@+id/applause_generic_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingBottom="0dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="24dp"
        android:textColor="@color/applause_dialog_title"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="Title text" />

    <TextView
        android:id="@+id/applause_generic_dialog_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingBottom="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="16dp"
        android:textColor="@color/applause_dialog_text"
        android:textSize="16sp"
        tools:text="Body Text. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas tempus nunc massa. In ultrices, mi sed pharetra aliquam, elit eros blandit turpis, sed accumsan neque nibh vitae eros. Cras vitae volutpat urna. Cras tortor libero, vulputate molestie vestibulum non, semper ut dolor. Class aptent taciti sociosqu ad litora torquent per." />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/applause_dialog_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:padding="8dp">

        <Button
            android:id="@+id/applause_generic_dialog_negative_btn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:background="@drawable/applause_dialog_button"

            android:textColor="@color/applause_dialog_button_text"
            android:textSize="18sp"
            tools:text="Negative button" />

        <Button
            android:id="@+id/applause_generic_dialog_positive_btn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:background="@drawable/applause_dialog_button"
            android:text="@string/applause_delete_screenshot_positive"
            android:textStyle="bold"
            android:textColor="@color/applause_dialog_button_text_primary"
            android:textSize="18sp"
            tools:text="Positive button" />

    </LinearLayout>

</LinearLayout>







